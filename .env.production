# ====================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ====================
# Copy this file to .env and update all values before deploying

# ====================
# Django Configuration
# ====================
DJANGO_SECRET_KEY=your-super-secret-key-here-change-this-in-production-minimum-50-chars
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=your-domain.com,www.your-domain.com,matrix.your-domain.com

# ====================
# Database Configuration
# ====================
POSTGRES_DB=nexus_main
POSTGRES_USER=nexus_user
POSTGRES_PASSWORD=your-secure-database-password-change-this

# ====================
# Redis Configuration
# ====================
REDIS_HOST=redis
REDIS_PORT=6379

# ====================
# Matrix Configuration
# ====================
MATRIX_SERVER_URL=https://matrix.your-domain.com
MATRIX_SERVER_NAME=matrix.your-domain.com
MATRIX_ADMIN_USER=@admin:matrix.your-domain.com
MATRIX_ADMIN_PASSWORD=your-matrix-admin-password-change-this

# ====================
# AI Configuration
# ====================
GOOGLE_API_KEY=your-google-gemini-api-key-from-google-ai-studio

# ====================
# WhatsApp Business API
# ====================
WHATSAPP_ACCESS_TOKEN=your-whatsapp-business-api-access-token
WHATSAPP_WEBHOOK_TOKEN=your-webhook-verification-token
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id

# ====================
# Telegram Configuration
# ====================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-from-botfather
TELEGRAM_API_ID=your-telegram-api-id
TELEGRAM_API_HASH=your-telegram-api-hash

# ====================
# Instagram Configuration
# ====================
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret

# ====================
# Facebook Configuration
# ====================
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# ====================
# Signal Configuration
# ====================
SIGNAL_NUMBER=your-signal-phone-number

# ====================
# Email Configuration
# ====================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# ====================
# Security Configuration
# ====================
BRIDGE_ENCRYPTION_KEY=your-32-character-encryption-key-here-exactly-32-chars

# ====================
# SSL Configuration
# ====================
SSL_CERT_PATH=/etc/ssl/certs/fullchain.pem
SSL_KEY_PATH=/etc/ssl/certs/privkey.pem

# ====================
# Monitoring & Logging
# ====================
SENTRY_DSN=your-sentry-dsn-for-error-tracking
LOG_LEVEL=INFO

# ====================
# Frontend Configuration
# ====================
FRONTEND_URL=https://your-domain.com
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ====================
# Webhook Configuration
# ====================
WEBHOOK_BASE_URL=https://your-domain.com

# ====================
# Optional: Third-party Integrations
