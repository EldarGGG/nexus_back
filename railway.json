{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt && python nexus_back/manage.py collectstatic --noinput"
  },
  "deploy": {
    "startCommand": "cd nexus_back && daphne -b 0.0.0.0 -p $PORT nexus_back.asgi:application",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
